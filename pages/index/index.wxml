<view class='weather-wrapper'>
  <view class='location-wrapper' bindtap='onTapLocation'>
    <view class='location'>
      <image src='/images/location-icon.png' class='location-icon'></image>
      <view class='location-text'>上海市</view>
    </view>
    <view class='location-tips'>点击获取当前位置</view>
  </view>
  <view class="temp">{{now.temp}}</view>
  <view class="weather">{{now.weather}}</view>
  <image class='weather-bg' src="{{now.weatherBackground}}" mode='scaleToFill'></image>
  <view class='day-weather' bindtap='onTapDayWeather'>
    <view class='day-text'>{{todayDate}}</view>
    <view class='day-temp'>{{todayTemp}}</view>
    <image class='arrow-icon' src='/images/arrow.png'></image>
  </view>
</view>
<view class='forecast'>
  <image class='forecast-icon' src='/images/time-icon.png'></image>
  <view class='forecast-text'>未来24小时天气预报</view>
</view>
<scroll-view scroll-x>
  <view class='forecast-list'>
    <view class='forecast-item' wx:for="{{forecast}}">
      <view class='forecast-time'>{{item.time}}</view>
      <image class='forecast-weather' src='{{item.iconPath}}'></image>
      <view class='forecast-temp'>{{item.temp}}</view>
    </view>
  </view>
</scroll-view>