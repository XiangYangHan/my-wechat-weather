<view class='weather-wrapper'>
  <view class="temp">{{now.temp}}</view>
  <view class="weather">{{now.weather}}</view>
  <image class='weather-bg' src="{{now.weatherBackground}}" mode='scaleToFill'></image>
</view>
<view class='forecast'>
  <image class='forecast-icon' src='/images/time-icon.png'></image>
  <view class='forecast-text'>未来24小时天气预报</view>
</view>
<scroll-view scroll-x>
  <view class='forecast-list'>
    <view class='forecast-item' wx:for="{{forecast}}">
      <view class='forecast-time'>{{item}}</view>
      <image class='forecast-weather' src='/images/sunny-icon.png'></image>
      <view class='forecast-temp'>{{item}}</view>
    </view>
  </view>
</scroll-view>